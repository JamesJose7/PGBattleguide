<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.pgbattleguide.jose.pgbattleguide.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main" />


    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_alignParentEnd="true"
        fab:fab_addButtonColorNormal="#fff"
        fab:fab_addButtonColorPressed="#ccc"
        fab:fab_addButtonPlusIconColor="#555"
        app:fab_labelStyle="@style/menu_labels_style"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_a"
            fab:fab_icon="@drawable/tankiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="#fff"
            fab:fab_size="mini"
            fab:fab_title="Tankiness"
            fab:fab_colorPressed="#ccc"
            android:onClick="filterClick"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_b"
            fab:fab_icon="@drawable/duel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="#fff"
            fab:fab_size="mini"
            fab:fab_title="Duel"
            fab:fab_colorPressed="#ccc"
            android:onClick="filterClick"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_c"
            fab:fab_icon="@drawable/defense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="#fff"
            fab:fab_size="mini"
            fab:fab_title="Defense"
            fab:fab_colorPressed="#ccc"
            android:onClick="filterClick"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_d"
            fab:fab_icon="@drawable/attack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="#fff"
            fab:fab_size="mini"
            fab:fab_title="Offense"
            fab:fab_colorPressed="#ccc"
            android:onClick="filterClick"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_e"
            fab:fab_icon="@drawable/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="#fff"
            fab:fab_size="mini"
            fab:fab_title="#"
            fab:fab_colorPressed="#ccc"
            android:onClick="filterClick"/>


    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</android.support.design.widget.CoordinatorLayout>
